---
interface Props {
    title: string;
    issuedDate?: string;
    pdfLink: string;
    thumbnailSrc?: string;
}

const { title, issuedDate, pdfLink, thumbnailSrc } = Astro.props;

// Próba sformatowania daty na polski, jeśli została podana w formacie rozpoznawalnym przez Date
const formattedDate = issuedDate
    ? !isNaN(Date.parse(issuedDate))
        ? new Date(issuedDate).toLocaleDateString("pl-PL", {
              day: "numeric",
              month: "long",
              year: "numeric",
          })
        : issuedDate // jeśli nie da się sparsować, zostawiamy oryginał
    : null;
---

<div class="cert-card" data-aos="fade-up">
    <div class="cert-thumbnail">
        <a
            href={pdfLink}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Pobierz certyfikat ${title}`}
        >
            {
                thumbnailSrc ? (
                    <img
                        src={thumbnailSrc}
                        alt={`Miniatura certyfikatu: ${title}`}
                        loading="lazy"
                    />
                ) : (
                    <div class="cert-fallback">
                        <i class="fa-solid fa-certificate fa-3x" />
                    </div>
                )
            }
            <div class="cert-hover-overlay">
                <i class="fa-solid fa-arrow-up-right-from-square"></i>
            </div>
        </a>
    </div>
    <div class="cert-content">
        <div class="cert-header">
            <h3>{title}</h3>
            {
                formattedDate && (
                    <time class="cert-date">
                        <i class="fa-regular fa-calendar" /> {formattedDate}
                    </time>
                )
            }
        </div>
        <div class="cert-description">
            <slot />
        </div>
        <div class="cert-actions">
            <a
                href={pdfLink}
                target="_blank"
                rel="noopener noreferrer"
                class="cert-btn"
            >
                <i class="fa-solid fa-file-pdf"></i> Otwórz PDF
            </a>
        </div>
    </div>
</div>

<style>
    .cert-card {
        display: flex;
        flex-direction: column;
        background: var(--card-bg, rgba(255, 255, 255, 0.03));
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 2rem;
        transition:
            transform 0.3s ease,
            border-color 0.3s ease;
    }

    @media (min-width: 768px) {
        .cert-card {
            flex-direction: row;
        }
    }

    .cert-card:hover {
        border-color: var(--primary-color);
        transform: translateY(-5px);
    }

    .cert-thumbnail {
        position: relative;
        flex: 0 0 250px;
        min-height: 180px;
        background: rgba(
            0,
            0,
            0,
            0.2
        ); /* Ciemniejsze tło, spójne z resztą strony */
        border-right: 1px solid rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .cert-thumbnail a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        position: relative;
    }

    .cert-thumbnail img {
        max-width: 100%;
        max-height: 100%;
        width: auto;
        height: auto;
        object-fit: contain; /* Certyfikat wyświetla się w całości bez obcinania */
        display: block;
    }

    .cert-fallback {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary-color);
        opacity: 0.5;
        min-height: 180px;
    }

    .cert-hover-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.6);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 2rem;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .cert-thumbnail a:hover .cert-hover-overlay {
        opacity: 1;
    }

    .cert-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .cert-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding-bottom: 1rem;
    }

    .cert-header h3 {
        margin: 0;
        font-size: 1.4rem;
        color: #fff;
    }

    .cert-date {
        font-size: 0.9rem;
        color: #a0a0a0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .cert-description {
        color: #d0d0d0;
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        flex: 1;
    }

    /* Style dla slotu (ul, li, p włożonych przez usera) */
    .cert-description :global(ul) {
        padding-left: 1.5rem;
        margin-top: 0.5rem;
    }
    .cert-description :global(li) {
        margin-bottom: 0.4rem;
    }
    .cert-description :global(p) {
        margin-top: 0;
    }

    .cert-actions {
        margin-top: auto;
    }

    .cert-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: var(--primary-color);
        color: #000;
        padding: 0.6rem 1.2rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition:
            background 0.3s ease,
            transform 0.2s ease;
    }

    .cert-btn:hover {
        background: #00b377; /* Trochę ciemniejszy zielony */
        transform: translateY(-2px);
    }
</style>
